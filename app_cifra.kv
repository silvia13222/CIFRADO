WidgetExample:

<WidgetExample>
    cols: 2
    BoxLayout:
        Image:
            allow_stretch: True
            source: 'C:\cursoeoi\logo.png'

    TextInput:
        multiline: False
        text: root.input_text

    Slider:
        id: slider1 
        min: -26
        max: 26
        orientation: "horizontal"
        value: 0
        step: 1
        on_value: root.show_slider(self)

    Label:
        text: str(slider1.value)

    Button:
        id: do_cifra
        text: root.button_text
        on_press: root.do_descifrar()
        disabled: False

    Label:
        id: textillo
        text: root.label_text



